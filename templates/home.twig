{% extends 'default.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block errors %}
    {% for error in errors %}
            <p class="m-0">{{ error }}</p>
    {% endfor %}
{% endblock %}

{% block content %}
    <section class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                {% if (pagination) %}
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="{{ pagination.previous }}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {% for i in 1..pagination.total %}
                                <li class="page-item {% if loop.index == pagination.current %} active {% endif %}">
                                    <a class="page-link" href="index-{{ loop.index }}">{{ loop.index }}</a>
                                </li>
                            {% endfor %}
                            <li class="page-item">
                                <a class="page-link" href="{{ pagination.next }}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                {% endif %}

                {% if postsList is empty %}
                    <p class="text-muted text-center">Il n'y a pas d'offres correspondant Ã  votre recherche</p>
                {% else %}
                    <div class="list-group mt-3 mb-3">
                        {% for post in postsList %}
                            <a href="#" class="list-group-item list-group-item-action">
                                <h3 class="mb-1">{{ post.title }}</h3>
                                <p class="m-0">{{ post.recruiterId }}</p>
                                <p class="m-0">{{ post.location }}</p>
                                <small>{{ post.addDate | showAge }}</small>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

{% endblock %}