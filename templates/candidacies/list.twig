{% extends 'default/default.twig' %}

{% block content %}
    <section class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                <h2 class="h3">Candidatures : </h2>
                <a href=" 
                {% if postsList is defined %}
                   ../profile
                {% else %}
                    ../index-1
                {% endif %}
                "><i class="fas fa-arrow-left mr-3"></i>Retour</a>

                {% include('pagination/_pagination.twig') %}
                
                {% if postsList is defined %}
                    {% if postsList is empty %}
                        <p class="text-muted text-center">Pas de candidatures re√ßues !</p>
                    {% else %}
                        <div class="list-group mt-3 mb-3">
                            {% for post in postsList %}
                                {% include('candidacies/_post_item.twig') %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% else %}
                    <div class="list-group mt-3 mb-3">
                        {% include 'posts/_postslist_item_recruiter.twig' %}
                        {% for candidacy in candidacies %}
                            {% include('candidacies/_candidacy_item.twig') %}
                        {% endfor %}
                    </div>
                {% endif %}
                
                {% include('pagination/_pagination.twig') %}
            </div>
        </div>
    </section>

{% endblock %}
