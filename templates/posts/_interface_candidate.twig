<h3 class="m-0">{{ post.title }}</h3>
<p class="mb-0 lead">{{ post.location }}</p>

<p class="mb-0">Publiée le {{ post.addDate | format_datetime('medium', 'none', locale='fr')}} </p> 
<p class="
    {% if post.expirationDate < date() %} 
        badge badge-danger"> Terminée depuis le 
    {% else %}
        ">Cette offre est visible jusqu'au  
    {% endif %}
    {{ post.expirationDate | format_datetime('medium', 'none', locale='fr')}}</p>

<div class="d-flex justify-content-between align-items-center flex-wrap">
    <a href="/candidate/postslist-1" class="m-1 flex-fill">Retour à la liste
    <a href="/candidate/remove-{{ post.id }}/candidate/postslist-1" title="Enlever de ma liste" class="m-1 mr-3 btn btn-outline-danger" role="button">
        <i class="far fa-trash-alt"></i>
    </a>  
    <a href="#" class="btn btn-success text-white rounded-pill p-2 pr-3 pl-3 text-center" role="button">Postuler</a>
</div>
