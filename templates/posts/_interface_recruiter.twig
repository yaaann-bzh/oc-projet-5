<h3 class="m-0">{{ post.title }}</h3>
<p class="mb-0 lead">{{ post.location }}</p>

<p class="mb-0">Publiée le {{ post.addDate | format_datetime('medium', 'none', locale='fr')}} </p> 
<p class="m-0 
    {% if post.expirationDate < date() %} 
        badge badge-danger"> Terminée depuis le 
    {% else %}
        ">Cette offre est visible jusqu'au  
    {% endif %}
    {{ post.expirationDate | format_datetime('medium', 'none', locale='fr')}}</p>

<p class="mt-3 mb-3 ml-1"><a href="/recruiter/postslist/index-1">Retour à la liste</a></p>
<div class="d-flex justify-content-between align-items-center flex-wrap">
    <a class="btn btn-outline-primary m-1 flex-fill " href="/recruiter/post-{{ post.id }}/edit" role="button">Modifier</a>
    <a class="btn btn-outline-success m-1 flex-fill " href="/recruiter/post-{{ post.id }}/copy" role="button">Copier</a>
    <a class="btn btn-outline-secondary m-1 flex-fill " href="/recruiter/post-{{ post.id }}/hide" role="button">Masquer</a>
    <a class="btn btn-outline-danger m-1 flex-fill " href="/recruiter/post-{{ post.id }}/delete" role="button">Supprimer</a>
</div>
