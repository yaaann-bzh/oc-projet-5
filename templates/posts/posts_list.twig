        <div class="row">
            <div class="col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2">
                <h2 class="h3">Vos offres : </h2>
                {% include('pagination/_pagination.twig') %}
                
                {% if postsList is empty %}
                    <p class="text-muted text-center">Pas d'offres Ã  afficher ici !</p>
                {% else %}
                    <div class="list-group mt-3 mb-3">
                        {% include('posts/_postslist_item_' ~ session.role ~ '.twig') %}
                    </div>
                {% endif %}
                
                {% include('pagination/_pagination.twig') %}
            </div>
        </div>
    </section>

{% endblock %}
