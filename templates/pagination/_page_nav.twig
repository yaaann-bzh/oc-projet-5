{% if (pagination) %}
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="{{ pagination.previous }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#"  title="Publication courante">{{ pagination.current }} / {{ pagination.total }} </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ pagination.next }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endif %}
