{% extends 'default/default.twig' %}

{% block content %}

    <div class="container-fluid d-flex align-items-center justify-content-center bg-light">
        <form method="post" action="" class="form-signin">

            <div class="text-center mb-3">
                <h1 class="h3 mb-3 font-weight-normal">Bon retour parmis nous</h1>
            </div>

            <div class="text-center mb-4" id="connectincorrect">
                    {% for connectError in connectErrors %}
                        <p class="m-0">{{ connectError }}</p>
                    {% endfor %}
            </div>

            <div class="form-label-group">
                <input type="text" name="emailLogin" id="emailLogin" class="form-control" placeholder="Adresse Email" required="" autofocus="">
                <label for="emailLogin">Adresse Email</label>
            </div>

            <div class="form-label-group">
                <input type="password" name="passLogin" id="passLogin" class="form-control" placeholder="Mot de passe" required="">
                <label for="passLogin">Mot de passe</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                <input type="checkbox" name="remember" value="remember-me"> Se souvenir de moi
                </label>
            </div>
            <input type="submit" class="btn btn-lg btn-primary btn-block" name="submit" value="Se connecter">
            <div class="form-label-group">
                <p class="m-4 text-center">Nouveau sur le site ? <a href="/inscription">S'inscrire</a></p>
            </div>
        </form>
    </div>
{% endblock %}
