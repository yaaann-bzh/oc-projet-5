{% extends 'default.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}

    <div class="container-fluid d-flex vh-80 align-items-center justify-content-center bg-light">
        <form method="post" action="" class="form-signin">

            <div class="text-center mb-3">
                <h1 class="h3 mb-3 font-weight-normal">Bon retour parmis nous</h1>
            </div>

            <div class="text-center mb-4" id="connectincorrect">
                    {% for connectError in connectErrors %}
                        <p class="m-0">{{ connectError }}</p>
                    {% endfor %}
            </div>

            <div class="form-label-group">
                <input type="text" name="email" id="inputLogin" class="form-control" placeholder="Adresse Email" required="" autofocus="">
                <label for="inputLogin">Adresse Email</label>
            </div>

            <div class="form-label-group">
                <input type="password" name="pass" id="inputPassword" class="form-control" placeholder="Mot de passe" required="">
                <label for="inputPassword">Mot de passe</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                <input type="checkbox" name="remember" value="remember-me"> Se souvenir de moi
                </label>
            </div>
            <input type="submit" class="btn btn-lg btn-primary btn-block" name="submit" value="Se connecter">
            <div class="form-label-group">
                <p class="m-4 text-center">Nouveau sur le site ? <a href="/inscription">S'inscrire</a></p>
            </div>
        </form>
    </div>
{% endblock %}
