{
    "emailLogin": {
        "required": false,
        "uniq": false,
        "type": "login",
        "max": 50,
        "min": 1
    },
    "passLogin": {
        "required": false,
        "uniq": false,
        "type": "login",
        "max": 50,
        "min": 1
    },
    "passControl": {
        "required": false,
        "uniq": false,
        "type": "login",
        "max": 50,
        "min": 1
    },
    "titleSearch": {
        "required": false,
        "uniq": false,
        "type": "text",
        "max": 50,
        "min": 0
    },
    "locationSearch": {
        "required": false,
        "uniq": false,
        "type": "text",
        "max": 50,
        "min": 0
    },
    "title": {
        "required": true,
        "uniq": false,
        "type": "text",
        "max": 50,
        "min": 5
    },
    "location": {
        "required": true,
        "uniq": false,
        "type": "text",
        "max": 50,
        "min": 5
    },    
    "duration": {
        "required": true,
        "uniq": false,
        "type": "int",
        "max": 3,
        "min": 1
    },
    "content": {
        "required": true,
        "uniq": false,
        "type": "text",
        "max": 5000,
        "min": 50
    },
    "cover": {
        "required": true,
        "uniq": false,
        "type": "text",
        "max": 500,
        "min": 20
    },
    "resume": {
        "required": false,
        "uniq": false,
        "type": "file",
        "max": 800,
        "min": 1,
        "ext" : ["pdf", "doc", "docx", "odt"]
    },
    "phone": {
        "required": false,
        "uniq": false,
        "type": "phone",
        "regex": "#^(0[0-9]|\\+[0-9]{3})([-. ]?[0-9]{2}){4}#",
        "uniq":true
    },
    "username": {
        "required": true,
        "uniq": true,
        "type": "text",
        "max": 25,
        "min": 4
    },
    "lastname": {
        "required": true,
        "uniq": false,
        "type": "text",
        "max": 25,
        "min": 1
    },
    "firstname": {
        "required": true,
        "uniq": false,
        "type": "text",
        "max": 25,
        "min": 1
    },
    "email": {
        "required": true,
        "uniq": true,
        "type": "email",
        "max": 50,
        "regex": "#^[a-z0-9._+-]+@[a-z0-9._-]{2,}\\.[a-z]{2,4}$#"
    },
    "pass": {
        "required": true,
        "uniq": false,
        "type": "pass",
        "max": 50,
        "regex": "#((?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*\\W)).{8,}#"
    },
    "confirm": {
        "required": true,
        "uniq": false,
        "type": "confirm",
        "max": 50
    },
    "agree": {
        "required": true,
        "uniq": false,
        "type": "checkbox"
    },    
    "profilepic": {
        "required": true,
        "uniq": false,
        "type": "file",
        "max": 100,
        "min": 1,
        "ext" : ["jpg", "jpeg", "png", "gif", "bmp"]
    }
}	

